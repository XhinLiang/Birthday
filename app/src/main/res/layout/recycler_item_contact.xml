<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="io.github.xhinliang.birthday.util.MvvmUtils" />

        <variable
            name="contact"
            type="io.github.xhinliang.birthday.model.Contact" />
    </data>

    <com.rey.material.widget.MaterialRippleLayout
        android:id="@+id/mrl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:background="@drawable/selector"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@string/nothing"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_account_box_black_24dp" />


            <LinearLayout
                android:id="@+id/ll_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_toRightOf="@id/ivAvatar"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="0dp"
                    android:layout_height="26dip"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@{MvvmUtils.getBirthday(contact.bornDay,contact.isLunar)}"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:singleLine="true"
                    android:text="@string/range_front"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_range"
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:layout_marginEnd="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginStart="10dp"
                    android:singleLine="true"
                    android:text="@{MvvmUtils.getDayRange(contact)}"
                    android:textColor="@color/red"
                    android:textSize="12sp"
                    tools:text="5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dip"
                    android:singleLine="true"
                    android:text="@string/range_behind"
                    android:textSize="12sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/ll_sub"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_toRightOf="@id/ivAvatar"
                android:gravity="center_vertical"
                android:text="@{contact.name}"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.rey.material.widget.MaterialRippleLayout>
</layout>