<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <import type="io.github.xhinliang.birthday.util.MvvmUtils" />

        <variable
            name="contact"
            type="io.github.xhinliang.birthday.model.Contact" />
    </data>

    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/mrl_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="?attr/colorPrimary"
        app:mrl_rippleOverlay="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="?android:attr/listPreferredItemHeight"
            android:padding="6dp">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="70dp"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="6dip"
                android:layout_marginRight="6dip"
                android:contentDescription="@string/nothing"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_account_box_black_24dp" />

            <TextView
                android:id="@+id/subtitle"
                android:layout_width="fill_parent"
                android:layout_height="26dip"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_toRightOf="@id/ivAvatar"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="@{MvvmUtils.getBirthday(contact.birthday)}"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/subtitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:layout_toEndOf="@id/ivAvatar"
                android:layout_toRightOf="@id/ivAvatar"
                android:gravity="center_vertical"
                android:text="@{contact.name}"
                android:textSize="16sp" />
        </RelativeLayout>
    </com.balysv.materialripple.MaterialRippleLayout>
</layout>