<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="selectableItemBackground">@drawable/selector</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="AppTheme" parent="@style/BaseTheme"/>

    <style name="ScrollTheme" parent="AppTheme" />

    <style name="MaterialButton">
        <item name="android:layout_height">@dimen/material_button_height</item>
        <item name="android:background">@drawable/bg_material_button_lite_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/material_button_text_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LightToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>
